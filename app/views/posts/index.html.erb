<div class="page-banner bloghero">
  <div class="shadow-box">
    <div class="banner-content page-canvas page-title">
      <h2>The Mungere School Blog</h2>
    </div>
  </div>
</div>
<div class="background-grey">

  <div class="flex page-canvas">
    <div class="flex-item-1col" style="position:relative">
      <div class="row">
        <div class="col-sm-2">
          <h3>Sort by:</h3>
          <div class="row">
            <p>Date</p> &nbsp;<p>Student posts</p>
            <p>Teacher posts</p>
          </div>
          <p></p>
        </div>
      </div>
      <div class="col-sm-3 ml-4 pl-4" style="margin-top: 80px; position:absolute; top:0; right:0">
        <% @posts.each do |post| %>
          <h5><a href="posts/<%= post.id %>"><%= post.title %></a></h5>

        <% end %>
      </div>
      <!-- <div class="row"> -->
        <% @posts.each do |post| %>
          <div class="col-sm-8 post shadow my-4">
            <div class="blogpreview">
              <a href="posts/<%= post.id %>"><%= image_tag("#{post.image}")%></a>
            </div>
            <div class="px-4 py-4">
              <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
              <h2><a href="posts/<%= post.id %>"><%= post.title %></a></h2>
              <p><em><%= post.author %></em></p>
              <p><%= post.quote %></p>
              <%= link_to "READ MORE", post_path(post) %>
            </div>
          </div>
        <% end %>
      <!-- </div> -->
    </div>
  </div>
</div>

<div class="yellow">
  <div class="flex page-canvas nowrap">
    <div class="flex-item-2col">
      <div class="twocol-left-text">
        <h2>BE A DONOR</h2>
        <p class="lead">Help us put kids into red sweaters and in the classroom. Every dollar makes a difference.</p>
        <div class="btns-wrapper">
          <%= link_to 'DONATE', new_charge_path, :class => "btn btn-solid mt-4" %>
          <!-- <a href="/pages/ourfocus" class="btn btn-solid">DONATE</a> -->
        </div>
      </div>
    </div>
    <div class="shadow nonmobile">
      <div class="flex-item-2col be-a-donor">
      </div>
    </div>
  </div>
  </div>
</div>
<div class="shadow mobile">
  <div class="flex-item-2col be-a-donor">
  </div>
</div>
