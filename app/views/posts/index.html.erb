<div class="container">
  <div class="blog-content flex">
    <% @posts.each do |post| %>
      <div class="flex-item-3col">
        <%= image_tag("#{post.image}")%>
        <div>
          <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
          <h2><%= post.title %></h2>
          <p>
            <%= post.quote %>
          </p>
        </div>
        <!-- <div>
          <%= raw(post.body).truncate(358) %></p>
        </div> -->

        <div><br>
          <%= link_to "READ MORE", post_path(post) %>
        </div>
        <br>
        <hr>
      </div>
    <% end %>
  </div>
</div>
