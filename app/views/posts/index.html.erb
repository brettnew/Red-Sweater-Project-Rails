<div class="container">
  <div class="flex-item-1col blog-content">
    <% @posts.each do |post| %>
      <div class="col-sm-8">
        <%= image_tag("#{post.image}")%>
        <div>
          <h2><%= post.title %></h2>
          <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
        </div>

        <div>
          <%= raw(post.body).truncate(358) %>
        </div>

        <div>
          <%= link_to "READ MORE", post_path(post) %>
        </div>
        <br>
        <hr>
      </div>
    <% end %>
  </div>
</div>
