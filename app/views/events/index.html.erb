<head><link href="http://addtocalendar.com/atc/1.5/atc-style-blue.css" rel="stylesheet" type="text/css"></head>


<!-- Banner -->
<div class="page-banner events">
  <div class="shadow-box">
    <div class="banner-content page-canvas page-title">
      <h2>Upcoming Events</h2>
      <!-- <h3 class="white-text">IF YOU WANT TO GO FAST,
        GO ALONE<h3>
      <h2>If you want to go far,
      <span class="yellow-text">go together</span></h2> -->
    </div>
  </div>
</div>

<div class="flex page-canvas">
</div>
<div class="page-canvas">
  <% if @events.any? %>
    <% @events.each do |event| %>
      <div class="flex nowrap">
        <div class="flex-item-2col">
            <%= image_tag("#{ event.image }")%>
        </div>
        <div class="flex-item-2col">
          <div>
            <h5><%= event.name %></h5>
            <p><%= event.time %></p>
            <p><%= event.start %></p>
            <br>
            <p><%= event.details %></p>
            <br>
            <span class="addtocalendar atc-style-blue">
              <var class="atc_event">
                <var class="atc_date_start"><%= event.start %></var>
                <var class="atc_date_end"><%= event.end %></var>
                <!-- <var class="atc_timezone">Europe/London</var> -->
                <var class="atc_title"><%= event.name %></var>
                <var class="atc_description"><%= event.details %></var>
                <var class="atc_location">tbd</var>

              </var>
            </span>
          </div>
          <hr class="mobile-hr yellow-hr">
        </div>
      </div>
    <% end %>
    <% else %>
    <p class="lead">There are no events scheduled at this time. Please check back again.</p>
  <% end %>
</div>

<div class="yellow">
  <div class="flex page-canvas nowrap">
    <div class="flex-item-2col">
      <div class="twocol-left-text">
        <h2>KEEP UP WITH US</h2>
        <p class="lead">Check out our blog to keep track of what's happening at Mungere and beyond.</p>
        <div class="btns-wrapper">
          <%= link_to 'EXPLORE THE BLOG', posts_path, :class => "btn btn-solid"%>
        </div>
      </div>
    </div>
    <div class="shadow nonmobile">
      <div class="flex-item-2col blog_CTA">
      </div>
    </div>
  </div>
</div>

<div class="shadow mobile">
  <div class="flex-item-2col blog_CTA">
  </div>
</div>

