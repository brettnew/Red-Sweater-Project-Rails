<%= render "layouts/errors", :object => @position %>
<h5>POSITIONS</h5>
<%= form_for @position, remote: true do |f| %>
  <%= f.label :title, 'Title' %>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.radio_button :available, false %>
  <%= f.label :available_no, 'Not Available' %>
  <%= f.radio_button :available, true %>
  <%= f.label :available_yes, 'Currently Available' %>

  <%= f.label :details, 'Additional details' %>
  <%= f.text_area :details, class: "form-control" %>
  <%= f.label :term, 'Term (format: Term I:Month 2016 -- Month 2017)' %>
  <%= f.text_field :term, class: "form-control" %>

  <%= f.label :stipend, 'Stipend amount (USD)' %>
  <%= f.text_field :stipend, class: "form-control"  %>

  <%= f.label :location, 'Location (Tanzania or other)' %>
  <%= f.text_field :location, class: "form-control" %>
  <%= f.submit class: 'btn btn-default' %>
<% end %>
