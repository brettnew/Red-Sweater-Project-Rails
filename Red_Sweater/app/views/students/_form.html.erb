<%= render "layouts/errors", :object => @student %>

<%= form_for @student do |f| %>
  <%= f.label :name, 'Full Name' %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :age, 'Age' %>
  <%= f.text_field :age, class: "form-control" %>
  <%= f.label :bio, 'Bio (optional)' %>
  <%= f.text_field :bio, class: "form-control" %>
  <%= f.label :dream, 'When I grow up, I want to be a...' %>
  <%= f.text_field :dream, class: "form-control" %>
  <%= f.label :dream, 'Sponsored? true or false?' %>
  <%= f.text_field :sponsored %>
  <%= f.hidden_field :sponsor_id, :value => 1 %>
  <%= f.label :image, 'Image file name (without the .png)' %>
  <%= f.text_field :image, class: "form-control" %>
  <%= f.label :gender, 'Boy or Girl' %>
  <%= f.text_field :gender, class: "form-control" %><br>
  <%= f.submit class: "btn btn-default" %>
<% end %>
