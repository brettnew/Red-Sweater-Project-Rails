<div class="col-sm-3 admin-student-view" id="student_<%= student.id %>">
  <%= image_tag("#{student.image}.png") %>
  <h4><strong><%= student.name %></strong></h4>
  <p><em><%= student.age %> year-old <%= student.gender %></em><br>
  I want to become: A <%= student.dream %></p>
  <%= link_to "Update", student_path(student)%>
  <%= link_to "Delete", student, method: :delete, :data => {:confirm => "Are you sure you want to remove this student from the sponsorship page?"}, remote: true %>
</div>
