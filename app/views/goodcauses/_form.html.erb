
<%= render "layouts/errors", :object => @goodcause %>

<%= form_for @goodcause, remote: true  do |f| %>
  <%= f.label :name, 'Cause Name' %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :details, 'Details' %>
  <%= f.text_area :details, class: "form-control" %>

  <%= f.label :cost, 'Cost to completion' %>
  <%= f.text_field :cost, class: "form-control" %>

  <%= f.label :image, 'Image' %>
  <%= f.file_field :image%>

  <%= f.submit class: "btn btn-default" %>
<% end %>
