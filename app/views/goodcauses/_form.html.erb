
<%= render "layouts/errors", :object => @goodcause %>
<h5>GOOD CAUSES</h5>
<%= form_for @goodcause, remote: true  do |f| %>
  <%= f.label :name, 'Cause Name' %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :details, 'Details' %>
  <%= f.text_area :details, class: "form-control" %>

  <%= f.label :suggested, 'Suggested Donation' %>
  <%= f.text_field :suggested, class: "form-control" %>

  <%= f.label :image, 'Image' %>
  <%= f.file_field :image%>

  <%= f.submit class: "btn btn-default" %>
  <button type="button" id="cancel" class="btn btn-default">Cancel</button>
<% end %>
